
.wellcome-section {
    background-color: #FAFAFB;
    height: 90vh;
}
.wellcome-container  {
    background-attachment: fixed;
    background-image: url('../images/content/layer-main.png');
    background-position: top;
    background-repeat: no-repeat;
    background-size: cover;
    height: 77vh;
    &__row  {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        &__desk {
            padding: 10rem 15%;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            &-headline {
                color: #fff;
                font-family: Montserrat;
                font-size: 48px;
                font-weight: bold;
                text-transform: uppercase;
                @include phones {
                    font-size: 1.5rem;
                }
                
            }
            @include phones {
                padding: 0;
                padding-top: 20%;
            }
            &-text {
                text-align: center;
                &::before {
                    position: absolute;
                    display: block;
                    top: 2.5rem;
                    left: 47%;
                    content: '';
                    width: 4rem;
                    border: 1.5px solid #FF5253;
                    @include phones {
                        left: 42%;
                    }
                }
                position: relative;
                padding-top: 5rem;
                padding-bottom: 2.5rem;
                color: #D3D3D3;
                font-size: 18px;
            }
        }
    }
        
}
    